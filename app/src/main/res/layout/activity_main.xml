<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:src="@drawable/fondo"
    android:layout_height="match_parent"
    android:background="#472E7D32"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo -->
        <ImageView
            android:id="@+id/Logo"
            android:layout_width="125dp"
            android:layout_height="111dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <!-- Tema del programa -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PIEDRA🪨 PAPEL📃 O TIJERAS✂️"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:textColor="#E4954B4B"
            android:background="#F70ABEFF"
            android:padding="10dp"
            android:textSize="30sp" />

        <!-- Colocamos el ícono -->
        <ImageView
            android:id="@+id/Icono"
            android:layout_width="350dp"
            android:layout_height="219dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ppt" />

        <!-- Resultado del juego -->
        <TextView
            android:id="@+id/gameResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="¡Haz tu jugada!"
            android:textSize="25sp"
            android:textColor="#140606"
            android:layout_marginBottom="15dp" />

        <!-- Selección de la computadora -->
        <TextView
            android:id="@+id/computerChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Computadora elige..."
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="15dp" />

        <!-- Botones para elegir Piedra, Papel y Tijera -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnPiedra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piedra"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="#FFCCBC"/>

            <Button
                android:id="@+id/btnPapel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Papel"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="#FFCCBC"/>

            <Button
                android:id="@+id/btnTijera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tijera"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="#FFCCBC"/>
        </LinearLayout>

        <!-- Puntuaciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/playerScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jugador: 0"
                android:textSize="18sp"
                android:textColor="#2100FF"/>

            <TextView
                android:id="@+id/computerScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computadora: 0"
                android:textSize="18sp"
                android:textColor="#2100FF"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
